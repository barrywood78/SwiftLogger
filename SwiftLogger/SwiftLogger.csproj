<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>SwiftLogger</Title>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>.NET; Logger</PackageTags>
    <Description>SwiftLogger: A lightweight, efficient logging library for .NET, offering easy integration and robust performance for all types of applications.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
